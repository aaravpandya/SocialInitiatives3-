}
<!DOCTYPE html>
<html @(ViewBag.SelectedNav == "Calendar" ? style : "")>
<head>
    <!-- inside <head> -->
    <title>TSRS Social Initiatives</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
