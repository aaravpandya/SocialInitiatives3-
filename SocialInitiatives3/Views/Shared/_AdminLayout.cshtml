<!DOCTYPE HTML>
<html>
<head>
    <!-- inside <head> -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    @*<link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <link href="~/Views/Shared/main.css" rel="stylesheet" />
        <script src="~/lib/popper.js/dist/umd/popper.js"></script>*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    <link href="~/CustomCSS/main.css" rel="stylesheet"/>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    @* ReSharper disable once Mvc.ActionNotResolved *@
    <a class="navbar-brand" href="@Url.Action("Admin")">Admin Console</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item  @(ViewBag.SelectedNav == "Initiatives" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Index", "Admin")">
                    Initiatives Forms
                    @if (ViewBag.SelectedNav == "Initiatives")
                    {
                        <span class="sr-only">(current)</span>
                    }
                </a>
            </li>
            <li class="nav-item  @(ViewBag.SelectedNav == "Events" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("Events", "Admin")">
                    Events Forms
                    @if (ViewBag.SelectedNav == "Events")
                    {
                        <span class="sr-only">(current)</span>
                    }
                </a>
            </li>
            <li class="nav-item  @(ViewBag.SelectedNav == "SYOI" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("SYOI", "Admin")">
                    Start your own Initiatives Forms
                    @if (ViewBag.SelectedNav == "SYOI")
                    {
                        <span class="sr-only">(current)</span>
                    }
                </a>
            </li>
            <li class="nav-item  @(ViewBag.SelectedNav == "UserList" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("UserList", "Admin")">
                    User List
                    @if (ViewBag.SelectedNav == "UserList")
                    {
                        <span class="sr-only">(current)</span>
                    }
                </a>
            </li>
            <li class="nav-item  @(ViewBag.SelectedNav == "ClubForms" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("ClubForms", "Admin")">
                    ClubForms
                    @if (ViewBag.SelectedNav == "UserList")
                    {
                        <span class="sr-only">(current)</span>
                    }
                </a>
            </li>
            <li class="nav-item  @(ViewBag.SelectedNav == "NGOS" ? "active" : "")">
                <a class="nav-link" href="@Url.Action("NGOS", "Admin")">
                    NGOS
                    @if (ViewBag.SelectedNav == "NGOS")
                    {
                        <span class="sr-only">(current)</span>
                    }
                </a>
            </li>
            <li class="nav-item  mr-auto">
                <a class="nav-link" href="@Url.Action("Home", "Index")">
                    Go to Website
                </a>
            </li>
            <li class="nav-item" style="padding-right: 1vw;">
                <button onclick="location.href = '@Url.Action("LogOut", "Account")'" class="btn "> Logout </button>
            </li>
        </ul>

    </div>
</nav>
@RenderBody()
</body>
</html>