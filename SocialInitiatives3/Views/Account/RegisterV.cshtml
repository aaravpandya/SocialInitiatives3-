@model RegisterModel;
<div>
    <div class="row" style="background-color: #f44336; color: white;">
        <p class="mx-auto display-1">
            Register
        </p>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-6 mx-auto" style="padding-bottom: 5vh; padding-top: 5vh;">
        <form asp-action="Register" asp-controller="Account" method="post">
            <input type="hidden" asp-for="ReturnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
            <div class="form-group">
                <label asp-for="Name">User Name</label>
                <input type="text" class="form-control" placeholder="Enter your name"
                       asp-for="Name"/>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email address</label>
                <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email" asp-for="Email"/>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="Phone Number">
            </div>
            <div class="form-group">
                <label asp-for="AdmissionNumber">Admission Number</label>
                <input type="number" class="form-control" asp-for="AdmissionNumber" placeholder="Admission Number">
            </div>
            <div class="form-group">
                <label asp-for="_class">Class</label>
                <input type="text" class="form-control" asp-for="_class" placeholder="Class">
            </div>
            <div class="form-group">
                <label asp-for="Section">Section</label>
                <input type="text" class="form-control" asp-for="Section" placeholder="Section">
            </div>
            <div class="form-group">
                <label asp-for="House">House</label>
                <input type="text" class="form-control" asp-for="House" placeholder="House">
            </div>
            <div>
                <p>Registered? <a href="#" data-toggle="modal" data-target="#loginModal" data-dismiss="modal">Login here!</a></p>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

</div>