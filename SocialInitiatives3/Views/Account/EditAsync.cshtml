@model AppUserViewModel;
<div class="row">
    <p class="mx-auto display-1">
        Edit account details
    </p>
</div>
<div class="col-6 mx-auto" style="padding-top:5vh;padding-bottom:5vh;">
    <form asp-action="EditAccount" asp-controller="Account" method="post">
        <input type="hidden" asp-for="returnUrl" />
        <div class="form-group">
            <label asp-for="Name">User Name</label>
            <input type="text" class="form-control" contenteditable="true"
                   asp-for="Name" value="@ViewBag.model.Name" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input type="email" class="form-control" aria-describedby="emailHelp" contenteditable="true" value="@ViewBag.model.Email" asp-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input type="tel" class="form-control" asp-for="PhoneNumber" contenteditable="true" value="@ViewBag.model.PhoneNumber">
        </div>
        <div class="form-group">
            <label asp-for="AdmissionNumber">Admission Number</label>
            <input type="number" class="form-control" asp-for="AdmissionNumber" contenteditable="true" value="@ViewBag.model.AdmissionNumber">
        </div>
        <div class="form-group">
            <label asp-for="_class">Class</label>
            <input type="text" class="form-control" asp-for="_class" contenteditable="true" value="@ViewBag.model._class">
        </div>
        <div class="form-group">
            <label asp-for="Section">Section</label>
            <input type="text" class="form-control" asp-for="Section" contenteditable="true" value="@ViewBag.model.Section">
        </div>
        <div class="form-group">
            <label asp-for="House">House</label>
            <input type="text" class="form-control" asp-for="House" contenteditable="true" value="@ViewBag.model.House">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
