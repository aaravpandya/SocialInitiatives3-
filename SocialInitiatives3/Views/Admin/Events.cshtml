                                <a href="@Url.Action("EventButton","Admin",new { id = 1, init = ViewBag.Events[i].EventID})" class="card-link"}>Approve</a>
                                <a href="@Url.Action("EventButton","Admin",new { id = 2, init = ViewBag.Events[i].EventID})" class="card-link"}>Delete</a>
                            </div>
                        </div>
                    }
                    
                </td>
                <td style="padding-right:2vw;">
                    @if((i + 1)<count)
                    {
<div class="card" style="width: 18rem; margin-left:3vw;">
                        <div class="card-body">
                            <h5 class="card-title">@ViewBag.Events[++i].Subject</h5>
